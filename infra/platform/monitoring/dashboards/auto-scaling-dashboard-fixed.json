{
  "id": null,
  "title": "ShopMate Auto-Scaling & Performance",
  "tags": ["kubernetes", "autoscaling", "hpa", "karpenter"],
  "style": "dark",
  "timezone": "",
  "panels": [
    {
      "id": 1,
      "title": "üöÄ Pod Scaling Status",
      "type": "timeseries",
      "gridPos": {"h": 8, "w": 24, "x": 0, "y": 0},
      "targets": [
        {
          "expr": "kube_deployment_status_replicas{namespace=\"shopmate\", deployment=~\".*-service\"}",
          "legendFormat": "{{deployment}}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "min": 0
        }
      }
    },
    {
      "id": 7,
      "title": "üñ•Ô∏è Total Nodes",
      "type": "stat",
      "gridPos": {"h": 6, "w": 6, "x": 0, "y": 8},
      "targets": [
        {
          "expr": "count(kube_node_info)",
          "legendFormat": "Nodes",
          "refId": "A"
        }
      ],
      "options": {
        "reduceOptions": {
          "values": false,
          "calcs": ["lastNotNull"],
          "fields": ""
        },
        "orientation": "auto",
        "textMode": "auto",
        "colorMode": "value",
        "graphMode": "area",
        "justifyMode": "auto"
      },
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "min": 0,
          "max": 5,
          "thresholds": {
            "steps": [
              {"color": "green", "value": 0},
              {"color": "yellow", "value": 3},
              {"color": "red", "value": 4}
            ]
          }
        }
      }
    },
    {
      "id": 10,
      "title": "‚ö° Request Rate (req/sec)",
      "type": "timeseries",
      "gridPos": {"h": 6, "w": 12, "x": 6, "y": 8},
      "targets": [
        {
          "expr": "sum(rate(product_service_http_requests_total[1m]))",
          "legendFormat": "Product Service",
          "refId": "A"
        },
        {
          "expr": "sum(rate(cart_service_http_requests_total[1m]))",
          "legendFormat": "Cart Service",
          "refId": "B"
        },
        {
          "expr": "sum(rate(order_service_http_requests_total[1m]))",
          "legendFormat": "Order Service",
          "refId": "C"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "reqps",
          "min": 0
        }
      }
    },
    {
      "id": 6,
      "title": "üìä HPA Status",
      "type": "stat",
      "gridPos": {"h": 6, "w": 6, "x": 18, "y": 8},
      "targets": [
        {
          "expr": "kube_horizontalpodautoscaler_status_current_replicas{namespace=\"shopmate\", horizontalpodautoscaler=~\".*-service-hpa\"}",
          "legendFormat": "{{horizontalpodautoscaler}}",
          "refId": "A"
        }
      ],
      "options": {
        "reduceOptions": {
          "values": false,
          "calcs": ["lastNotNull"],
          "fields": ""
        },
        "orientation": "vertical",
        "textMode": "value_and_name",
        "colorMode": "background",
        "graphMode": "none",
        "justifyMode": "center"
      },
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "min": 0,
          "thresholds": {
            "steps": [
              {"color": "green", "value": 0},
              {"color": "yellow", "value": 3},
              {"color": "red", "value": 4}
            ]
          }
        }
      }
    },
    {
      "id": 2,
      "title": "üíª Frontend Service - CPU & Requests",
      "type": "timeseries",
      "gridPos": {"h": 6, "w": 12, "x": 0, "y": 14},
      "targets": [
        {
          "expr": "sum by (pod) (rate(container_cpu_usage_seconds_total{namespace=\"shopmate\", container=\"frontend-service\"}[5m])) * 100",
          "legendFormat": "{{pod}} CPU %",
          "refId": "A"
        },
        {
          "expr": "sum(rate(frontend_service_http_requests_total[1m])) * 10",
          "legendFormat": "HTTP Requests/sec (x10)",
          "refId": "B"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "min": 0,
          "max": 100,
          "thresholds": {
            "steps": [
              {"color": "green", "value": 0},
              {"color": "yellow", "value": 50},
              {"color": "red", "value": 80}
            ]
          }
        }
      }
    },
    {
      "id": 3,
      "title": "üõçÔ∏è Product Service CPU Usage (%)",
      "type": "timeseries",
      "gridPos": {"h": 6, "w": 12, "x": 0, "y": 14},
      "targets": [
        {
          "expr": "sum by (pod) (rate(container_cpu_usage_seconds_total{namespace=\"shopmate\", container=\"product-service\"}[5m])) * 100",
          "legendFormat": "{{pod}}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "min": 0,
          "max": 100,
          "thresholds": {
            "steps": [
              {"color": "green", "value": 0},
              {"color": "yellow", "value": 50},
              {"color": "red", "value": 80}
            ]
          }
        }
      }
    },
    {
      "id": 4,
      "title": "üõí Cart Service CPU Usage (%)",
      "type": "timeseries",
      "gridPos": {"h": 6, "w": 12, "x": 12, "y": 14},
      "targets": [
        {
          "expr": "sum by (pod) (rate(container_cpu_usage_seconds_total{namespace=\"shopmate\", container=\"cart-service\"}[5m])) * 100",
          "legendFormat": "{{pod}}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "min": 0,
          "max": 100,
          "thresholds": {
            "steps": [
              {"color": "green", "value": 0},
              {"color": "yellow", "value": 50},
              {"color": "red", "value": 80}
            ]
          }
        }
      }
    },
    {
      "id": 5,
      "title": "üì¶ Order Service CPU Usage (%)",
      "type": "timeseries",
      "gridPos": {"h": 6, "w": 12, "x": 0, "y": 20},
      "targets": [
        {
          "expr": "sum by (pod) (rate(container_cpu_usage_seconds_total{namespace=\"shopmate\", container=\"order-service\"}[5m])) * 100",
          "legendFormat": "{{pod}}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "min": 0,
          "max": 100,
          "thresholds": {
            "steps": [
              {"color": "green", "value": 0},
              {"color": "yellow", "value": 50},
              {"color": "red", "value": 80}
            ]
          }
        }
      }
    },
    {
      "id": 8,
      "title": "üíæ Memory Usage by Service",
      "type": "timeseries",
      "gridPos": {"h": 6, "w": 12, "x": 12, "y": 20},
      "targets": [
        {
          "expr": "sum(container_memory_usage_bytes{namespace=\"shopmate\", container!=\"POD\"}) by (container) / 1024 / 1024",
          "legendFormat": "{{container}} Memory (MB)",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "decbytes",
          "min": 0
        }
      }
    }
  ],
  "time": {"from": "now-15m", "to": "now"},
  "refresh": "5s",
  "schemaVersion": 16,
  "version": 0
}